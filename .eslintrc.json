{
  "root": true,
  "extends": ["next/core-web-vitals", "next", "prettier"],
  "plugins": ["testing-library"],
  "overrides": [
    // Only uses Testing Library lint rules in test files
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "extends": ["plugin:testing-library/react"]
    },
    {
      "files": ["**/*.spec.ts"],
      "rules": {
        "testing-library/prefer-screen-queries": "off"
      }
    }
  ]
}